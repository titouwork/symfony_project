{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
	</div>

	{% for season in program.seasons %}
		<div class="card" style="width: 18rem;">
			<div class="card-body">
				<h5 class="card-title">{{ season.number }}</h5>
				<h6 class="card-subtitle mb-2 text-muted">{{ season.year }}</h6>
				<p class="card-text">{{ season.Description}}</p>
				<a href="{{ path('season_show', { programId: program.id, seasonId:season.id }) }}" class="card-link">Voir la saison</a>
			</div>


		{% else %}
			Aucune saison trouvée.
		{% endfor %}
	</div>

	<a href="{{ path('list_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
